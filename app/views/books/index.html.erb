<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

<h2>Books</h2>
<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
	<% @books. each do |book| %>
		<tr>
			<td>
				<%= book.title %>
			</td>
			<td>
				<%= book.body %>
			</td>
			<td>
			<%= link_to "show", book_path(book) %>
			<%= link_to "edit", edit_book_path(book) %>
			<%= link_to "destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>


<h3>New book</h3>
<%= form_for (@book) do |f| %>

<p>title</p>
<%= f.text_area :title %>

<p>book</p>
<%= f.text_area :body %>

<%= f.submit "create" %>
<% end %>
