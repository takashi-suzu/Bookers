<body>
	<div class="message">
		<% if flash[:notice] %>
			<p><%= flash[:notice] %></p>
		<% end %>
	</div>

	<div class="index-up">
		<h2>Books</h2>
		<table class="index-body-table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Body</th>
				</tr>
			</thead>
			<tbody>
			<% @books. each do |book| %>
				<tr>
					<td>
						<span><%= book.title %></span>
					</td>
					<td>
						<span><%= book.body %></span>
					</td>
					<td>
					<%= link_to "show", book_path(book) %>
					<%= link_to "edit", edit_book_path(book) %>
					<%= link_to "destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %>
					</td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>

	<div class="index-down">
		<h3>New book</h3>
		<%= form_for (@book) do |f| %>

		<p>title</p>
		<%= f.text_field :title %>

		<p>body</p>
		<%= f.text_area :body %>
		<br>
		<%= f.submit "Create Book" %>
		<% end %>
	</div>

</body>

