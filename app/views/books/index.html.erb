<body>
	<div class="index-up">
		<h2>Books</h2>
		<table class="index-body-table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Body</th>
				</tr>
			</thead>
			<tbody>
			<% @books. each do |book| %>
				<tr>
					<td><span><%= book.title %></span></td>
					<td><span><%= book.body %></span></td>
					<td><%= link_to "show", book_path(book.id) %></td>
					<td><%= link_to "edit", edit_book_path(book.id) %></td>
					<td><%= link_to "destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>

	<div class="index-down">
		<h3>New book</h3>
		<%= form_for (@book) do |f| %>

		<p>title</p>
		<%= f.text_field :title %>

		<p>body</p>
		<%= f.text_area :body %>
		<br>
		<%= f.submit "Create Book" %>
		<% end %>
	</div>

	<div class="error-message">
	<% if @book.errors.any? %>
		<h2><%= pluralize(@book.errors.count, "error") %> prohibitec this article from being saved:</h2>
		<% @book.errors.full_messages.each do |message| %>
		<span><%= message %></span>
		<% end %>
	<% end %>
	</div>

</body>
