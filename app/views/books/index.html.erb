<h2>Books</h2>
<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
	<% @books. each do |book| %>
		<tr>
			<td>
				<%= book.title %>
			</td>
			<td>
				<%= book.body %>
			</td>
			<td>
			<%= link_to "詳細", books_path %>
			<%= link_to "編集", books_path %>
			<%= link_to "削除", books_path %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>